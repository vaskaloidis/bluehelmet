		function open_work_modal(short_name, pretty_name, visit_url) {
			project_url = 'http://vkaloidis.herokuapp.com/p/raw/'.concat(short_name)
			$("#modal_title").text(pretty_name);
			// e.preventDefault();
			$("#work-modal-iframe").attr("src", project_url);
			$('.work-modal').appendTo("body").modal('show');
			$('#visit_project_link').attr("href", (visit_url));
			$("#work-modal-iframe").load(function () {
				$('.loading').hide();
			});
		}
		function resize_work_iframe() {
			$("#work-modal-iframe").height($("#work_modal_content").height()-25);
		}
